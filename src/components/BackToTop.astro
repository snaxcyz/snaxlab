<button
  id="back-to-top"
  class="fixed bottom-6 right-6 z-40 hidden rounded-full border border-border bg-background/80 px-3 py-2 text-sm shadow-sm backdrop-blur transition hover:bg-background focus:outline-none focus:ring-2 focus:ring-ring"
  aria-label="Back to top"
  title="Back to top"
>
  â†‘
</button>

<script is:inline>
  const btn = document.getElementById('back-to-top');
  if (btn) {
    const toggle = () => {
      const show = window.scrollY > 600;
      btn.classList.toggle('hidden', !show);
    };
    toggle();
    window.addEventListener('scroll', toggle, { passive: true });
    btn.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }));
  }
</script>
